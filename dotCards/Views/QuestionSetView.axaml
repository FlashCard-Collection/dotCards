<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="dotCards.Views.QuestionSetView">

  <StackPanel Spacing="50">
    <TextBlock Text="{Binding CurrQuestion}" FontSize="40"></TextBlock>
    <TextBlock Text="{Binding CurrAnswer}" FontSize="15"></TextBlock>

    <DockPanel LastChildFill="False">
      <Button Content="Prev" DockPanel.Dock="Left"  Command="{Binding PrevQuestion}"></Button>
      <Button Content="Next" DockPanel.Dock="Right" Command="{Binding NextQuestion}"></Button>
    </DockPanel>
    
  </StackPanel>
</UserControl>
