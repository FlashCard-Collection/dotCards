<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="dotCards.Views.SetListView">

  <ScrollViewer Grid.Column="0" Grid.Row="1" VerticalScrollBarVisibility="Visible">
    <StackPanel>

      <ItemsControl Items="{Binding Items}">
        <ItemsControl.ItemTemplate>
          <DataTemplate>
            <DockPanel HorizontalAlignment="Center">
              <TextBlock Height="10" DockPanel.Dock="Top">
              </TextBlock>
              <TextBlock Width="400" HorizontalAlignment="Left" VerticalAlignment="Center" Text="{Binding Description}" Margin="5,0,0,0"></TextBlock>
              <Button Width="150" Content="Select" Command="{Binding $parent[Window].DataContext.SetSelection}" CommandParameter="{Binding FilePath}"></Button>
            </DockPanel>
          </DataTemplate>
        </ItemsControl.ItemTemplate>
      </ItemsControl>

    </StackPanel>

  </ScrollViewer>
  
</UserControl>
